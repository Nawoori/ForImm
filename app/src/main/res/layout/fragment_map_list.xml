<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapListRecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context="com.example.administrator.forimm5.Map.MapListFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/centerRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <android.support.v7.widget.SearchView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="8dp"
        android:background="@color/searchBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/searchView2" />

    <TextView
        android:id="@+id/listRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:textColor="@color/title"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/centerRecycler"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/backtopager"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/centerRecycler"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/backtopager" />
</android.support.constraint.ConstraintLayout>
